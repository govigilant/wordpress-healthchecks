{
    "name": "vigilant/healthchecks",
    "description": "WordPress plugin providing a health check endpoint.",
    "type": "wordpress-plugin",
    "require": {
        "php": "^8.2",
        "symfony/http-foundation": "^7.1",
        "govigilant/vigilant-healthchecks-base": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Vigilant\\WordpressHealthchecks\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "8.2.0"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "analyse": "phpstan",
        "style": "pint --test",
        "quality": [
            "@test",
            "@analyse"
        ]
    }
}
